@model AdsBoard.Domain.Entities.Advertisement

@{
    ViewBag.Title = "Дошка оголошень ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <a href="#">
                    <img class="img-thumbnail" width=750" height="300" src="@Url.Action("GetImage", "Ad",new { Model.AdId})" />
                </a>
            </div>
            <div class="col-lg-6">
                <h2 class="card-title">@Model.Headline</h2>
                <p class="card-text">@Model.Details</p>
             </div>
        </div>
    </div>
<!-- Comments Form -->
<div class="card my-4">
    <h5 class="card-header">Залиште повідомлення:</h5>
    <div class="card-body">
        <form>
            <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
    </div>
</div>

<!-- Single Comment -->
